<div class="row">
    <div class="col-md-4 mx-auto my-5">
        <div class="card">
            <div class="card-header text-center text-uppercase font-weight-bold">
                Iniciar sesión
            </div>
            <img src="/img/mm.png" alt="Logo" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Correo" class="form-control {{alerts.msgEmail}}" value="{{errors.msg}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Contraseña" class="form-control {{alerts.msgPass}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Iniciar sesión
                        </button>
                    </div>
                    <div class="form-group">
                        <a href="/users/auth/google" class="btn btn-danger btn-block">
                            <i class="fab fa-google-plus-g"></i>
                            Iniciar sesión con Google 
                        </a>
                    </div>
                    <div class="form-group">
                        <a href="/users/auth/google" class="btn btn-fb btn-block">
                            <i class="fab fa-facebook"></i>
                            Iniciar sesión con Facebook 
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>